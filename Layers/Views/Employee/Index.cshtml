@{
    int i = 1;
}
<a asp-controller="Employee" asp-action="Add">Add Employee</a>
<h1>Employees</h1>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
                <tr>
                 <td>@(i++)</td>
                 <td>@emp.Fname </td>
                 <td><a asp-controller="Employee" asp-action="GetById" asp-route-id="@emp.SSN">Details</a></td>
                 <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@emp.SSN">Edit</a></td>
                 <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@emp.SSN">Delete</a></td>
                </tr>
        }
    </tbody>
</table>